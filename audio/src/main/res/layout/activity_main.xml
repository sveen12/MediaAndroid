<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.udea.compumovil.gr01.mediaandroid.MainActivity">

    <ListView
        android:id="@+id/lista_musica"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Play"
        android:id="@+id/btn_play"
        android:layout_marginTop="250dp"
        android:onClick="onClick"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Stop"
        android:id="@+id/btn_stop"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="60dp"
        android:onClick="onClick"/>

    <Button
        android:text="Lanzar Ventana 2"
        android:id="@+id/btn_ventanados"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="295dp"
        android:onClick="onClick" />
    <Button
        android:text="Lanzar Ventana 3"
        android:id="@+id/btn_ventanatres"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:onClick="onClick"/>
</RelativeLayout>
